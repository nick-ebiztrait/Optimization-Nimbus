<style>
  #wave-divider-{{ section.id }} {
    color: {{ section.settings.wave_color }};
    background-color: {{ section.settings.background_color }};
  }
  #wave-divider-{{ section.id }} .wave-divider__wave {
    height: var(--height);
  }
  #wave-divider-{{ section.id }} .wave-divider__wave-bottom {
    transform: rotate(180deg);
  }
</style>
<div id="wave-divider-{{ section.id }}" class="wave-divider overflow-hidden" >
  <div class="wave-divider__container">
    <div class="wave-divider__wave {% if section.settings.flip_wave == 'bottom' %}wave-divider__wave-bottom{% endif %}" style="--height: {{ section.settings.height }}px;">
        {% case section.settings.wave_type %}
          {% when 'wave' %}
             <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1280 100" width="100%" height="100%" preserveAspectRatio="none">
