        {% when 'wave-8' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 35.28 2.17" width="100%" height="100%" preserveAspectRatio="none"><path d="M35.28 1.67c-3.07-.55-9.27.41-16.15 0-6.87-.4-13.74-.58-19.13.1v.4h35.28z" fill="currentColor"/><path d="M35.28 1.16c-3.17-.8-7.3.4-10.04.56-2.76.17-9.25-1.47-12.68-1.3-3.42.16-4.64.84-7.04.86C3.12 1.31 0 .4 0 .4v1.77h35.28z" opacity=".5" fill="currentColor"/><path d="M35.28.31c-2.57.84-7.68.3-11.8.43-4.1.12-6.85.61-9.57.28C11.18.69 8.3-.16 5.3.02 2.3.22.57.85 0 .87v1.2h35.28z" opacity=".5" fill="currentColor"/></svg>
        {% when 'wave-9' %}
          <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 1200.0 84.0" fill="none"  preserveAspectRatio="none"><path d="M600 39.1293C800 84.6351 1000 84.6351 1200 39.1294V84.0001H0L3.48561e-06 39.1293C200 -6.37645 400 -6.37643 600 39.1293Z" fill="currentColor"></path>
            </svg>
        {% endcase %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Wave Divider",
  "disabled_on": {
    "groups": ["aside"]
  },
  "settings": [
    {
      "type": "select",
      "id": "flip_wave",
      "label": "Flip",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "top"
    },
    {
      "type": "select",
      "id": "wave_type",
      "label": "Wave Type",
      "options": [
        {
          "value": "wave",
          "label": "Wave 1"
        },
        {
          "value": "wave-2",
          "label": "Wave 2"
        },
        {
          "value": "wave-3",
          "label": "Wave 3"
        },
        {
          "value": "wave-4",
          "label": "Wave 4"
        },
        {
          "value": "wave-5",
          "label": "Wave 5"
        },
        {
          "value": "wave-6",
          "label": "Wave 6"
        },
        {
          "value": "wave-7",
          "label": "Wave 7"
        },
        {
          "value": "wave-8",
          "label": "Wave 8"
        },
        {
          "value": "wave-9",
          "label": "Wave 9"
        }
      ],
      "default": "wave"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Wave Height",
      "min": 10,
      "max": 200,
      "step": 10,
      "default": 80
    },
    {
      "type": "color",
      "id": "wave_color",
      "label": "Wave Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Wave Divider"
    }
  ]
}
{% endschema %}

