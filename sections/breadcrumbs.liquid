
<div class="section-breadcrumb section-padding section-bg " {% render 'section-properties' %}>
  <div class="{{ section.settings.section_width }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in {% endif %}">
   {% render 'breadcrumb' , section: section %}
  </div>
</div>
{% schema %}
    {
   "name": "Breadcrumbs",
   "tag": "section",
   "class": "breadcrumbs-section",
   "disabled_on": {
      "groups": ["header", "footer", "aside"]
   },
   "settings": [
      {
         "type": "select",
         "id": "section_width",
         "label": "Width",
         "options": [
            {
               "value": "container",
               "label": "Container"
            },
            {
               "value": "container-fluid",
               "label": "Stretched"
            },
            {
               "value": "w-full",
               "label": "Full width"
            }
         ],
         "default": "container"
      },
      {
         "type": "select",
         "id": "alignment",
         "label": "Alignment",
         "options": [
            {
               "value": "start",
               "label": "Left"
            },
            {
               "value": "center",
               "label": "Center"
            },
            {
               "value": "end",
               "label": "Right"
            }
         ],
         "default": "start"
      },
      {
         "type": "select",
         "id": "text_size",
         "label": "Text size",
         "options": [
            {
               "value": "body-1",
               "label": "Body 1"
            },
            {
               "value": "body-2",
               "label": "Body 2"
            },
            {
               "value": "text-size-small",
               "label": "Small"
            },
            {
               "value": "text-size-tiny",
               "label": "Tiny"
            }
         ],
         "default": "text-size-small"
      },
      {
         "type": "header",
         "content": "Colors"
      },
      {
         "type": "color",
         "id": "bg_color",
         "label": "Background"
      },
      {
         "type": "color",
         "id": "text_color",
         "label": "Text"
      },
      {
         "type": "header",
         "content": "Section padding"
      },
      {
         "type": "range",
         "id": "padding_top",
         "min": 0,
         "max": 100,
         "step": 4,
         "unit": "px",
         "label": "Padding top",
         "default": 40
      },
      {
         "type": "range",
         "id": "padding_bottom",
         "min": 0,
         "max": 100,
         "step": 4,
         "unit": "px",
         "label": "Padding bottom",
         "default": 40
      }
   ],
   "presets": [
      {
         "name": "Breadcrumbs"
      }
   ]
}
{% endschema %}