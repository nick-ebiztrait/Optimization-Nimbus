{%- comment -%}
----------------------------------------------------------------------------------------------------------------------
SECTION PROPERTIES
----------------------------------------------------------------------------------------------------------------------

{%- endcomment -%}

{%-  assign bg_color =  section.settings.bg_color -%}
{%-  assign text_color =  section.settings.text_color -%}
{%-  assign border_color =  section.settings.border_color -%}
{%-  assign padding_top =  section.settings.padding_top  -%}
{%-  assign padding_bottom =  section.settings.padding_bottom -%}

{% unless bg_color == 'rgba(0,0,0,0)' or bg_color == blank %}
    {%- capture style_attr -%}{{ style_attr }} --color-background: {{ bg_color.rgb }};{%- endcapture -%}
{% endunless %}
{% unless text_color == 'rgba(0,0,0,0)' or text_color == blank %}
    {%- capture style_attr -%}{{ style_attr }} --color-foreground: {{ text_color.rgb }};--color-heading: {{ text_color.rgb }};{%- endcapture -%}
{% endunless %}
{% unless border_color == 'rgba(0,0,0,0)' or border_color == blank %}
{%- capture style_attr -%}{{ style_attr }} --color-border: {{ border_color.rgb }};{%- endcapture -%}
{% endunless %} 
{% unless padding_top == '0' or padding_top == blank  %}
    {%- capture style_attr -%}{{ style_attr }} --section-padding-top: {{ padding_top |  append: 'px' }};{%- endcapture -%}
{% endunless %}
{% unless padding_bottom == '0' or padding_bottom == blank  %}
    {%- capture style_attr -%}{{ style_attr }} --section-padding-bottom: {{ padding_bottom |  append: 'px' }};{%- endcapture -%}
{% endunless %}
{%- if style_attr != blank -%}
    style="{{ style_attr | strip }}"
{%- endif -%}