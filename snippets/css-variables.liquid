
{%- liquid
    assign body_font_500 = settings.type_body_font | font_modify: 'weight', '500'
    assign body_font_600 = settings.type_body_font | font_modify: 'weight', '600'
    assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
    assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
    assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    assign heading_font_500 = settings.type_header_font | font_modify: 'weight', '500'
    assign heading_font_600 = settings.type_header_font | font_modify: 'weight', '600'
    assign heading_font_bold = settings.type_header_font | font_modify: 'weight', 'bold'
    assign heading_font_italic = settings.type_header_font | font_modify: 'style', 'italic'
    assign heading_font_bold_italic = heading_font_bold | font_modify: 'style', 'italic'

    assign button_animation_hover = settings.button_animation_hover
    case button_animation_hover
      when 'fade' 
        assign transform = 'none'
        assign transform_origin = 'center'
        assign transform_hover = 'none'
        assign transform_origin_hover = 'center'
        assign opacity = '0'
        assign opacity_hover = '1'
      when 'left-to-right' 
        assign transform = 'scaleX(0)'
        assign transform_origin = 'center right'
        assign transform_hover = 'none'
        assign transform_origin_hover = 'center left'
        assign opacity = '1'
        assign opacity_hover = '1'
      when 'right-to-left' 
        assign transform = 'scaleX(0)'
        assign transform_origin = 'left'
        assign transform_hover = 'scaleX(1)'
        assign transform_origin_hover = 'right'
        assign opacity = '1'
        assign opacity_hover = '1'
      when 'top-to-bottom' 
        assign transform = 'scaleY(0)'
        assign transform_origin = 'bottom'
        assign transform_hover = 'scaleY(1)'
        assign transform_origin_hover = 'top'
        assign opacity = '1'
        assign opacity_hover = '1'
      when 'bottom-to-top' 
        assign transform = 'scaleY(0)'
        assign transform_origin = 'top'
        assign transform_hover = 'scaleY(1)'
        assign transform_origin_hover = 'bottom'
        assign opacity = '1'
        assign opacity_hover = '1'
    endcase
-%}
